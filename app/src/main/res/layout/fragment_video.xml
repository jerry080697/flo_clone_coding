<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/video_latest_iv"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp"
                android:src="@drawable/nugu_btn_down"
                />
            <TextView
                android:id="@+id/video_latest_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/video_latest_iv"
                app:layout_constraintBottom_toBottomOf="@id/video_latest_iv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toStartOf="@id/video_latest_iv"
                android:text="최신순"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/video1_img_iv"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/video_latest_tv"
                android:layout_width="350dp"
                android:layout_height="175dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/img_video_exp"/>
            <TextView
                android:id="@+id/video1_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[MV] Coin"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/video1_img_iv"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/video1_img_iv"/>
            <TextView
                android:id="@+id/video1_singer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이유 (IU) | 2021.03.26"
                android:textStyle="bold"
                android:textColor="@color/gray_color"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@id/video1_title_tv"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/video1_img_iv"/>

            <ImageView
                android:id="@+id/video2_img_iv"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/video1_singer_tv"
                android:layout_width="350dp"
                android:layout_height="175dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/img_video_exp"/>
            <TextView
                android:id="@+id/video2_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[MV] 라일락 (LILAC)"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/video2_img_iv"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/video1_img_iv"/>
            <TextView
                android:id="@+id/video2_singer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이유 (IU) | 2021.03.25"
                android:textStyle="bold"
                android:textColor="@color/gray_color"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@id/video2_title_tv"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/video1_img_iv"/>

            <ImageView
                android:id="@+id/video3_img_iv"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/video2_singer_tv"
                android:layout_width="350dp"
                android:layout_height="175dp"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/img_video_exp"/>
            <TextView
                android:id="@+id/video3_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[MV] Celebrity"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/video3_img_iv"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/video1_img_iv"/>
            <TextView
                android:id="@+id/video3_singer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이유 (IU) | 2021.01.27"
                android:textStyle="bold"
                android:textColor="@color/gray_color"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@id/video3_title_tv"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/video1_img_iv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>